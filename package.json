{
  "name": "games-api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "yarn lint --fix"
    ]
  },
  "workerThreads": false,
  "scripts": {
    "dev": "tsnd --exit-child --respawn --transpile-only --ignore-watch node_modules src/shared/infra/http/server.ts",
    "lint": "eslint src/**/*.ts --max-warnings=0",
    "prisma:studio": "prisma studio --schema=./src/shared/infra/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=./src/shared/infra/prisma/schema.prisma",
    "prisma:generate": "prisma generate --schema=./src/shared/infra/prisma/schema.prisma",
    "build": "tsc",
    "prepare": "husky install"
  },
  "dependencies": {
    "@prisma/client": "^4.0.0",
    "celebrate": "^15.0.1",
    "express": "^4.18.1",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.7.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^18.0.1",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "eslint": "^7.32.0 || ^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.2.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-import-helpers": "^1.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "prisma": "^4.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  }
}
